<%- include("./includes/head") %>
<h1 class="title">HomePage</h1>
<p>
  Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad dignissimos veniam
  pariatur autem. Maxime velit eos sint. Tempore quam cumque optio laborum
  dolore commodi cum dolorem deleniti soluta, ea nemo.
</p>
<% if(isLogin) { %>
<a href="/admin/create-post"
  >Add a new post as <%= currentUserEmail ? currentUserEmail : "" %></a
>
<form action="/logout" method="post">
  <input hidden value="<%= csrfToken %>" name="_csrf" />
  <button>Logout</button>
</form>
<% } else { %>
<a href="/login">Login to existing account</a>
<a href="/register">Create a new account</a>
<% } %>
<hr />
<h1 class="title">Posts</h1>
<% if(postsArr.length === 0 && isLogin) { %>
<div>
  <h4>Nothing to see ?</h4>
  <p>Create a new post now !!!</p>
  <a href="/admin/create-post">Create a new post</a>
</div>
<% } %> <% for(let post of postsArr) { %>
<div class="post-box">
  <div>
    <p class="post-title"><%= post.title %></p>
    <p>Post by => <%= post.userId.email %></p>
  </div>
  <a class="btn" href="/post/<%= post._id %>">See More...</a>
</div>
<% } %> <%- include("./includes/foot") %>
