<% if(isLogin) { %>
<div class="login-div">
  <div>
    <a href="/admin/create-post"
      >Add a new post as <%= currentUserEmail ? currentUserEmail : "" %></a
    >
    <span>or</span>
    <form action="/logout" method="post">
      <input hidden value="<%= csrfToken %>" name="_csrf" />
      <button>Logout</button>
    </form>
  </div>
</div>
<% } else { %>
<div class="login-div">
  <div>
    <a href="/login">Login to existing account</a>
    <span>or</span>
    <a href="/register">Create a new account</a>
  </div>
</div>
<% } %>
<hr class="hr" />
<h1 class="title">Recent posts</h1>
<% if(postsArr.length === 0 && isLogin) { %>
<div class="pl-80">
  <h4>Nothing to see ?</h4>
  <p>Create a new post now !!!</p>
  <a href="/admin/create-post">Create a new post</a>
</div>
<% } %>
<div class="post-container">
  <% for(let post of postsArr) { %>
  <div class="post-box">
    <p class="post-title"><%= post.title %></p>
    <p class="post-email">Post by : <%= post.userId.email %></p>
    <p class="post-des"><%= post.description.substr(0,198) %></p>
    <a class="" href="/post/<%= post._id %>">Read More</a>
    <hr />
  </div>
  <% } %>
</div>
<div class="paginate">
  <% if(!hasNextPage && currentPage == 1) {%>
  <a href="/?page=2">Next Page</a>
  <% } %> <% if(hasNextPage) {%>
  <a href="/?page=<%= nextPage%>">Next Page <%= nextPage%></a>
  <% } %> <% if(hasPreviousPage) {%>
  <a href="/?page=<%= previousPage%>">Previous Page <%= previousPage%></a>
  <% } %>
</div>
<%- include("./includes/foot") %>
