<%- include("./includes/head") %>
<section class="details">
  <div>
    <h1><%= post.title %></h1>
    <a href="/">Go back</a>
  </div>
  <img src="<%= post.imgUrl %>" alt="<%= post.title %>" />
  <hr />
  <p><%= post.description %></p>
  <% if(post.userId.toString() === currentLoginUserId.toString()) { %>
  <div class="login-div">
    <div>
      <form action="/admin/delete/<%= post._id %>" method="post">
        <input hidden value="<%= csrfToken %>" name="_csrf" />
        <button>Delete</button>
      </form>
      <a href="/admin/edit/<%= post._id %>" class="btn-full">Edit</a>
    </div>
  </div>
  <% } %>
</section>
<%- include("./includes/foot") %>
